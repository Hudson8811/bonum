						.card-leasing.card-leasing--colored.swiper-slide
							.card-leasing__subtitle Акция
							.card-leasing__image
								img(src='./img/picture/leasing/5.png' srcset='./img/picture/leasing/5@2x.png 2x' alt='')
							.card-leasing__bottom
								.card-leasing__offer
									.card-leasing__from +1 отсек
									span в подарок
								img(src='./img/svg/i-arrow-link.svg' alt="")
					.leasing__nav-extended.nav-extended
						.nav-extended__group
							.nav-extended__pagi
							a.nav-extended__link(href='#' target='_blank') Посмотреть все
						.nav-extended__nav.d-none-flex-mobile
							.swiper-btn.swiper-btn--prev
								svg(width='30' height='49' viewBox='0 0 30 49' fill='none' xmlns='http://www.w3.org/2000/svg')
									path(d='M13 1C22.2894 4.23354 29 13.5327 29 24.5C29 35.4673 22.2894 44.7665 13 48' stroke='#8F9190' stroke-width='1.5')
									path(d='M0 25L7.5 29.3301L7.5 20.6699L0 25ZM16 24.25L6.75 24.25L6.75 25.75L16 25.75L16 24.25Z' fill='#8F9190')
							.swiper-btn.swiper-btn--next
								svg(width='30' height='49' viewBox='0 0 30 49' fill='none' xmlns='http://www.w3.org/2000/svg')
									path(d='M13 1C22.2894 4.23354 29 13.5327 29 24.5C29 35.4673 22.2894 44.7665 13 48' stroke='#1F2120' stroke-width='1.5')
									path(d='M0 25L7.5 29.3301L7.5 20.6699L0 25ZM16 24.25L6.75 24.25L6.75 25.75L16 25.75L16 24.25Z' fill='#1F2120')

		section.partners.leasing-mult__advantages
			.container
				.partners__content
					.h2 Лизинг выгоднее кредита
					.partners__items
						.partners__row
							.partners__item.item-partners
								.item-partners__column
									.item-partners__title Простая подача заявки
									.item-partners__icon
										img(src="img/leasing-mult/advantage-1.svg" alt="alt")
									.item-partners__text минимум документов
							.partners__item.item-partners
								.item-partners__column
									.item-partners__title Быстрое одобрение
									.item-partners__icon
										img(src="img/leasing-mult/advantage-2.svg" alt="alt")
									.item-partners__text несколько дней
							.partners__item.item-partners
								.item-partners__column
									.item-partners__title Снижение налоговой нагрузки
									.item-partners__icon
										img(src="img/leasing-mult/advantage-3.svg" alt="alt")
									.item-partners__text оптимизация налогов за счет платежей
							.partners__item.item-partners
								.item-partners__column
									.item-partners__title Не требует больших начальных вложений
									.item-partners__icon
										img(src="img/leasing-mult/advantage-4.svg" alt="alt")
									.item-partners__text доступное приобретение

		section.leasing-mult-steps
			.container
				.h2 лизинг в три шага
				.leasing-mult-steps__cards
					.steps-card
						.steps-card__content
							.steps-card__info
								.steps-card__title оставьте заявку
								.steps-card__text
									!= 'Мы внимательно изучим ваш запрос и свяжемся с вами'
							.steps-card__img 
								img(src="img/leasing-mult/leasing-step-1.png" alt="alt")
						.steps-card__number 1
					.steps-card
						.steps-card__content
							.steps-card__info
								.steps-card__title согласуйте документы с лизингом
								.steps-card__text
									!= 'Это займёт несколько дней'
							.steps-card__img 
								img(src="img/leasing-mult/leasing-step-2.png" alt="alt")
						.steps-card__number 2
					.steps-card
						.steps-card__content
							.steps-card__info
								.steps-card__title Заберите технику
								.steps-card__text
									!= 'И начните зарабатывать'
							.steps-card__img 
								img(src="img/leasing-mult/leasing-step-3.png" alt="alt")
						.steps-card__number 3


